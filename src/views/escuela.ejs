<%- include('partials/_header')%>

<div class="container">
  <H1>Bienvenido al gestor del alumnado</H1>
  <br>
</div>

<div class="container">

  <div class="row">
    <!--FORM-->
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="Nombre" placeholder="Introduza su nombre">
            </div>

            <div class="form-group">
              <input class="form-control" type="text" name="Apellido" placeholder="Introduzca su Apellido">
            </div>
           
            <button class="btn btn-primary" type="submit">
              Añadir
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- LIST -->
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>N°</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < alumno.length; i++) { %>
            <tr>
              <td><%= i + 1%></td>
              <td><%= alumno[i].Nombre %></td>
              <td><%= alumno[i].Apellido %></td>
              <td>
                <a
                  class="<%= alumno[i].status ? 'btn btn-success' : 'btn btn-dark'%>"
                  href="/turn/<%= alumno[i]._id %>">Aprobar</a>
                <a href="/delete/<%= alumno[i]._id %>"
                  class="btn btn-danger">
                  Eliminar
                </a>
                <a href="/edit/<%= alumno[i]._id %>" class="btn btn-info">
                  Editar
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>

    </div>
  </div>

</div>

